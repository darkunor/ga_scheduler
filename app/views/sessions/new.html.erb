<h1>Log in</h1>
<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :e_mail %>
      <%= text_field_tag :e_mail, params[:e_mail] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
  <% end %>
